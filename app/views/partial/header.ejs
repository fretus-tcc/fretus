<%
    let caminho = null
    if (autenticado?.tipo == 1) {
        caminho = '/cliente/solicitar-entrega'
    } else if (autenticado?.tipo == 2) {
        caminho = '/entregador/entregas-solicitadas'
    } else if (autenticado?.tipo == 3) {
        caminho = '/admin'
    }
%>

<header>
    <a class="logo-container" href="/">
        <img class="logo" src="/imgs/logotca.png">
    </a>
    <nav class="nav-menu">
        <ul>
            <li>
                <a href="/ajuda">Central de ajuda</a>
            </li>
            <li>
                <a href="/admin">Fale Conosco</a>
            </li>
            
            <% if (autenticado) { %>
                <li>
                    <a class="cta" href="<%= caminho %>">Acessar conta</a>
                </li>
            <% } else {%>
                <li class="arrow-link">
                    <a href="/login">Entrar</a>
                </li>
                <li>
                    <a class="cta" href="/cadastro">Cadastre-se</a>
                </li>
            <% } %>
        </ul>
        <section class="burguer">
            <img src="/imgs/burguer-fretus.svg" alt="">
        </section>
    </nav>
</header>
